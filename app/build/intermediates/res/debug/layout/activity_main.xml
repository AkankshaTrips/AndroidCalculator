<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.purdue.tripath1.cs180.MainActivity">

    <Button
        android:id="@+id/dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"

        android:layout_alignTop="@+id/zero"
        android:layout_gravity="center"
        android:background="#1DE9B6"
        android:text="."
        android:textSize="40sp" />

    <Button
        android:id="@+id/zero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/one"
        android:background="#4FC3F7"
        android:text="0"
        android:textSize="40sp" />

    <Button
        android:id="@+id/equals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/zero"
        android:layout_gravity="center"
        android:layout_toRightOf="@+id/zero"
        android:background="#1DE9B6"
        android:text="="
        android:textSize="40sp" />

    <Button
        android:id="@+id/one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"

        android:layout_below="@+id/four"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="#4FC3F7"
        android:text="1"
        android:textSize="40sp" />

    <Button
        android:id="@+id/two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/zero"
        android:layout_alignLeft="@+id/zero"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="#4FC3F7"
        android:text="2"
        android:textSize="40sp" />

    <Button
        android:id="@+id/three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/zero"
        android:layout_alignLeft="@+id/equals"

        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="#4FC3F7"
        android:text="3"
        android:textSize="40sp" />

    <Button
        android:id="@+id/four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/one"

        android:layout_alignTop="@+id/five"
        android:layout_gravity="center"
        android:background="#4FC3F7"
        android:text="4"
        android:textSize="40sp" />

    <Button
        android:id="@+id/five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/two"
        android:layout_alignLeft="@+id/two"

        android:layout_gravity="center"
        android:background="#4FC3F7"
        android:text="5"
        android:textSize="40sp" />

    <Button
        android:id="@+id/six"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/three"
        android:layout_alignLeft="@+id/three"
        android:layout_gravity="center"

        android:background="#4FC3F7"
        android:text="6"
        android:textSize="40sp" />

    <Button
        android:id="@+id/seven"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/one"

        android:layout_alignTop="@+id/eight"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"

        android:background="#4FC3F7"
        android:text="7"
        android:textSize="40sp" />

    <Button
        android:id="@+id/eight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/five"
        android:layout_alignLeft="@+id/five"

        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:background="#4FC3F7"
        android:text="8"
        android:textSize="40sp" />

    <Button
        android:id="@+id/nine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/six"
        android:layout_alignLeft="@+id/six"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:background="#4FC3F7"
        android:text="9"
        android:textSize="40sp" />

    <Button
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/three"

        android:layout_alignLeft="@+id/sub"
        android:layout_alignRight="@+id/equals"

        android:layout_gravity="center"
        android:background="#7E57C2"
        android:text="+"
        android:textSize="40sp"
        android:layout_below="@+id/six" />

    <Button
        android:id="@+id/sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/add"

        android:layout_alignLeft="@+id/mul"
        android:layout_alignRight="@+id/mul"

        android:layout_gravity="center"
        android:background="#7E57C2"
        android:text="-"
        android:textSize="40sp"
        android:layout_below="@+id/nine" />

    <Button
        android:id="@+id/mul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sub"

        android:layout_alignParentRight="true"

        android:layout_gravity="center"
        android:background="#7E57C2"
        android:text="x"
        android:textSize="40sp"
        android:layout_alignTop="@+id/nine"
        android:layout_toRightOf="@+id/six"
        android:layout_toEndOf="@+id/six" />

    <Button
        android:id="@+id/div"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="center"
        android:background="#7E57C2"
        android:text="/"
        android:textSize="40sp"
        android:layout_above="@+id/mul"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/nine"
        android:layout_toEndOf="@+id/nine" />

    <TextView
        android:id="@+id/calc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text=""
        android:layout_alignRight="@+id/div"
        android:layout_alignEnd="@+id/div"
        android:layout_above="@+id/del" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DEL"
        android:id="@+id/del"
        android:textSize="40dp"
        android:background="#1DE9B6"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/div"
        android:layout_toStartOf="@+id/div" />

</RelativeLayout>
